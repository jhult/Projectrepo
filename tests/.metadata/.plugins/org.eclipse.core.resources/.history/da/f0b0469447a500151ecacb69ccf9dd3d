	   @AfterClass
	   public void testCleanUp()   { 
		   driver.manage().deleteAllCookies();
			Utility.logOut(driver);
	   //  Quit -closes all the open windows
	     driver.quit();
	   }
		   
	}	
  	       
  	       
  	       